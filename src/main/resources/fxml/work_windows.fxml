<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>

<?import javafx.scene.control.cell.*?>
<?import javafx.util.Callback?>
<GridPane
        xmlns:fx="http://javafx.com/fxml"
        stylesheets="/style/style.css"
        styleClass="windowStyle"
        fx:controller="controller.WorkWindowController">
    <rowConstraints>
        <RowConstraints minHeight="50"/>
        <RowConstraints vgrow="ALWAYS"/>
    </rowConstraints>
    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS"/>
    </columnConstraints>
    <GridPane
            fx:id="userBorder"
            styleClass="borderMainStyle"
            GridPane.rowIndex="1">
        <GridPane.margin>
            <Insets left="25" right="25" bottom="25"/>
        </GridPane.margin>
        <padding>
            <Insets left="25" right="25" bottom="25"/>
        </padding>
        <rowConstraints>
            <RowConstraints prefHeight="40"/>
            <RowConstraints prefHeight="10"/>
            <RowConstraints vgrow="ALWAYS"/>
            <RowConstraints prefHeight="40"/>
        </rowConstraints>
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>
        <Label
                text="Пользователи"
                styleClass="labelStyleTitle"
                GridPane.halignment="CENTER"
                GridPane.rowIndex="0"/>
        <Separator
                GridPane.rowIndex="1"
                GridPane.halignment="CENTER"
                GridPane.valignment="TOP"
                styleClass="lineStyle"/>
        <TableView
                fx:id="usersTable"
                GridPane.rowIndex="2"
                editable="true"
                onKeyPressed="#deleteUserKeyReleased">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <columns>
                <TableColumn
                        fx:id="fioColumn"
                        text="ФИО"
                        onEditCommit="#fioEditCommit">
                    <cellValueFactory>
                        <PropertyValueFactory property="fio"/>
                    </cellValueFactory>
                    <cellFactory>
                        <TextFieldTableCell fx:factory="forTableColumn"/>
                    </cellFactory>
                </TableColumn>
                <TableColumn
                        fx:id="loginColumn"
                        text="Логин"
                        onEditCommit="#loginEditCommit">
                    <cellValueFactory>
                        <PropertyValueFactory property="login"/>
                    </cellValueFactory>
                    <cellFactory>
                        <TextFieldTableCell fx:factory="forTableColumn"/>
                    </cellFactory>
                </TableColumn>
                <TableColumn
                        fx:id="dateRegColumn"
                        text="Дата регистрации">
                    <cellValueFactory>
                        <PropertyValueFactory property="dateReg"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn
                        fx:id="phoneColumn"
                        text="Номер телефона"
                        onEditCommit="#phoneEditCommit">
                    <cellValueFactory>
                        <PropertyValueFactory property="phone"/>
                    </cellValueFactory>
                    <cellFactory>
                        <TextFieldTableCell fx:factory="forTableColumn"/>
                    </cellFactory>
                </TableColumn>
                <TableColumn
                        fx:id="emailColumn"
                        text="E-mail"
                        onEditCommit="#emailEditCommit">
                    <cellValueFactory>
                        <PropertyValueFactory property="email"/>
                    </cellValueFactory>
                    <cellFactory>
                        <TextFieldTableCell fx:factory="forTableColumn"/>
                    </cellFactory>
                </TableColumn>
                <TableColumn
                        fx:id="positionColumn"
                        text="Должность"
                        onEditCommit="#positionEditCommit"/>
                <TableColumn
                        fx:id="groupColumn"
                        text="Группа"
                        onEditCommit="#groupEditCommit"
                        minWidth="100"/>
                <TableColumn
                        fx:id="accessColumn"
                        text="Уровень допуска">
                    <cellValueFactory>
                        <PropertyValueFactory property="access"/>
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
        <GridPane
                GridPane.rowIndex="3"
                alignment="CENTER"
                hgap="5">
            <Button text="Добавить"
                    GridPane.columnIndex="0"
                    onAction="#addUserAction"/>
            <Button text="Удалить"
                    GridPane.columnIndex="1"
                    onAction="#deleteUserAction"/>
            <Button text="Сохранить"
                    GridPane.columnIndex="2"
                    onAction="#saveUserAction"/>
        </GridPane>
    </GridPane>
    <GridPane
            GridPane.rowIndex="0"
            alignment="CENTER"
            styleClass="borderMenuStyle"
            hgap="5">
        <Button text="Результаты"
                GridPane.columnIndex="0"
                styleClass="buttonMenu"/>
        <Button text="Тесты"
                GridPane.columnIndex="1"
                styleClass="buttonMenu"/>
        <Button text="Пользователи"
                GridPane.columnIndex="2"
                styleClass="buttonMenu"/>
        <Button text="Создание теста"
                GridPane.columnIndex="3"
                styleClass="buttonMenu"/>
        <Button text="Настройки"
                GridPane.columnIndex="4"
                styleClass="buttonMenu"/>
    </GridPane>
</GridPane>

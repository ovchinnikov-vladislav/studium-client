<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Separator?>
<GridPane
        xmlns:fx="http://javafx.com/fxml"
        stylesheets="/style/style.css"
        fx:controller="controller.ConnectWindowController"
        styleClass="borderStyle"
        style="-fx-border-radius: 0px">
    <padding>
        <Insets topRightBottomLeft="15"/>
    </padding>
    <rowConstraints>
        <RowConstraints prefHeight="40"/>
        <RowConstraints prefHeight="20"/>
        <RowConstraints prefHeight="30"/>
        <RowConstraints prefHeight="35"/>
        <RowConstraints prefHeight="10"/>
        <RowConstraints prefHeight="30"/>
        <RowConstraints prefHeight="35"/>
        <RowConstraints prefHeight="10"/>
        <RowConstraints prefHeight="30"/>
        <RowConstraints prefHeight="35"/>
        <RowConstraints prefHeight="10"/>
        <RowConstraints prefHeight="30"/>
        <RowConstraints prefHeight="35"/>
        <RowConstraints prefHeight="10"/>
    </rowConstraints>
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES"/>
    </columnConstraints>
    <Label
            text="Подключение к БД"
            GridPane.halignment="CENTER"
            GridPane.rowIndex="0"
            styleClass="labelStyleTitle"/>
    <Separator
            GridPane.rowIndex="1"
            GridPane.halignment="CENTER"
            GridPane.valignment="TOP"
            styleClass="lineStyle"/>
    <TextField
            fx:id="addressField"
            prefHeight="35"
            GridPane.rowIndex="3"
            onKeyPressed="#addressFieldKeyPressed"/>
    <Label
            text="Введите адрес"
            styleClass="labelStyle"
            GridPane.rowIndex="2"/>
    <TextField
            fx:id="dbField"
            prefHeight="35"
            GridPane.rowIndex="6"
            onKeyPressed="#dbFieldKeyPressed"/>
    <Label
            text="Введите БД"
            styleClass="labelStyle"
            GridPane.rowIndex="5"/>
    <TextField
            fx:id="loginField"
            prefHeight="35"
            GridPane.rowIndex="9"
            onKeyPressed="#loginFieldKeyPressed"/>
    <Label
            text="Введите логин"
            styleClass="labelStyle"
            GridPane.rowIndex="8"/>
    <PasswordField
            fx:id="passField"
            prefHeight="35"
            GridPane.rowIndex="12"
            onKeyPressed="#passFieldKeyPressed"/>
    <Label
            text="Введите пароль"
            styleClass="labelStyle"
            GridPane.rowIndex="11"/>
    <Button
            text="Подключиться"
            styleClass="button"
            GridPane.rowIndex="14"
            GridPane.halignment="CENTER"
            onAction="#connectAction"/>
</GridPane>
